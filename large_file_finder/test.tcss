$border: round darkgreen 50%;

#app_grid {
  layout: grid;
  grid-size: 2 2;
  grid-columns: 0.75fr 2fr;
  grid-rows: 50% 50%;
}

#widgets {
  width: 100%;
  height: auto;

  border: $border;
  border: $border;
  border-title-color: green;
  border-title-style: bold;
  border-title-background: linen;
  border-title-align: right;
}

#widgets > Label {
  width: 100%;
  height: auto;
  color: green;
  border: inner green;
  background: linen;
  content-align: center middle;
  text-style: bold;
}

#log {
  width: 100%;
  height: 100%;
  column-span: 2;

  border: $border;
  border-title-color: green;
  border-title-style: bold;
  border-title-background: linen;
  border-title-align: right;
}

#config_query {
  layout: grid;
  grid-size: 1 2;
  grid-rows: 0.1fr 1fr;
  column-span: 2;
  height: auto;

  border: $border;
  border-title-color: green;
  border-title-style: bold;
  border-title-background: linen;
  border-title-align: right;
}

#config_query_header {
  layout: grid;
  grid-size: 2;
  grid-columns: 0.2fr 1fr;
  height: 100%;
}

#path_select {
  margin: 1 4;
}

#path {
  margin: 2;
}

/* height: auto;
#config_log {
} */

#config_query_body > Input {
  width: 100%;
  height: auto;
}

Header {
  dock: top;
}

Footer {
  dock: bottom;
}
